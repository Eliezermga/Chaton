<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <objectAnimator
            android:duration="300"
            android:propertyName="scaleX"
            android:valueTo="1.0"
            android:valueType="floatType" />
    </item>
    <item>
        <objectAnimator
            android:duration="300"
            android:propertyName="scaleX"
            android:valueTo="1.5"
            android:valueType="floatType" />
    </item>
</selector>